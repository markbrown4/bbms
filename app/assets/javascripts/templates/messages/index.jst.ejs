<h1>Messages</h1>
<a id="new-message" class="btn">New Message</a>
<ul id="threads"></ul>
<div id="thread">
  <ul class="actions">
    <li><a class="reply btn">Reply</a></li>
    <li><a class="unsubscribe btn">Unsubscribe</a></li>
    <li><a class="add-people btn">Add people</a></li>
  </ul>
  <h2><%= subject %></h2>
  <ul id="messages"></ul>
  <div id="reply">
    <img src="<%= avatar %>">
    <textarea id="message_body" placeholder="Reply to this discussion"></textarea>
    <a id="reply-button" class="btn">Reply</a>
  </div>
</div>