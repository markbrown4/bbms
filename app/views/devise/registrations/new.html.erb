<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.email_field :email, class: 'input', placeholder: 'Email' %></div>

  <div><%= f.password_field :password, class: 'input', placeholder: 'Password' %></div>

  <div><%= f.password_field :password_confirmation, class: 'input', placeholder: 'Confirm Password' %></div>

  <div><%= f.submit "Sign up", class: 'btn' %></div>
<% end %>

<%= render "devise/shared/links" %>
